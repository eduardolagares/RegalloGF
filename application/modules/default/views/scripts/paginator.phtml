<?php if ($this->pageCount): ?>

    <div class="pager">
        <?php if (isset($this->previous)): ?>
            <a href="<?php echo $this->url(array("page" => $this->previous)); ?>"><</a>
        <?php endif; ?>


        <?php foreach ($this->pagesInRange as $page): ?>
            <?php $class = ($page == $this->current) ? 'class="active"' : '';  ?>
            <a <?php echo $class; ?> href="<?php echo $this->url(array('page' => $page)) ?>"><?php echo $page; ?></a>
        <?php endforeach; ?>
            
