            <a href="<?php echo $this->url(array("page" => $this->next)); ?>">></a>
        <?php endif; ?>

        <br/>
        <label><b><?php echo $this->currentItemCount ?></b> de <b><?php echo $this->totalItemCount ?></b></label>
